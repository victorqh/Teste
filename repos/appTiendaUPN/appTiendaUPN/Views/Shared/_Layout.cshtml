<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TechStore UPN</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/appTiendaUPN.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-laptop"></i> TechStore UPN
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Productos" asp-action="Index">
                                <i class="bi bi-grid"></i> Productos
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Productos" asp-action="Ofertas">
                                <i class="bi bi-tag"></i> Ofertas
                            </a>
                        </li>
                    </ul>

                    <!-- Barra de búsqueda -->
                    <form asp-controller="Productos" asp-action="Buscar" method="get" class="d-flex me-3">
                        <div class="input-group">
                            <input type="search" name="q" class="form-control" placeholder="Buscar productos..." aria-label="Buscar">
                            <button class="btn btn-light" type="submit">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                    </form>

                    <ul class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <!-- Carrito -->
                            <li class="nav-item">
                                <a class="nav-link position-relative" asp-controller="Carrito" asp-action="Index">
                                    <i class="bi bi-cart3 fs-5"></i>
                                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" id="cart-count">
                                        0
                                    </span>
                                </a>
                            </li>
                            
                            <!-- Usuario -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle"></i> @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li><a class="dropdown-item" href="#"><i class="bi bi-person"></i> Mi Perfil</a></li>
                                    <li><a class="dropdown-item" href="#"><i class="bi bi-clock-history"></i> Mis Pedidos</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                            <button type="submit" class="dropdown-item">
                                                <i class="bi bi-box-arrow-right"></i> Cerrar Sesión
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right"></i> Iniciar Sesión
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="py-4" style="margin-bottom: 300px;">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-light">
        <div class="container py-3">
            <div class="row">
                <div class="col-md-4">
                    <h6 class="fw-bold">TechStore UPN</h6>
                    <p class="small">Tu tienda de tecnología de confianza</p>
                </div>
                <div class="col-md-4">
                    <h6 class="fw-bold">Enlaces</h6>
                    <ul class="list-unstyled small">
                        <li><a href="#" class="text-decoration-none">Sobre Nosotros</a></li>
                        <li><a href="#" class="text-decoration-none">Términos y Condiciones</a></li>
                        <li><a asp-controller="Home" asp-action="Privacy" class="text-decoration-none">Privacidad</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h6 class="fw-bold">Contacto</h6>
                    <p class="small">
                        <i class="bi bi-envelope"></i> info@techstore.upn.pe<br>
                        <i class="bi bi-telephone"></i> (01) 123-4567
                    </p>
                </div>
            </div>
            <hr>
            <p class="text-center mb-0 small">&copy; 2025 - TechStore UPN - Todos los derechos reservados</p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
