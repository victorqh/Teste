@model IEnumerable<appTiendaUPN.Models.Producto>
@{
    ViewData["Title"] = "Inicio";
}

<!-- Hero Section -->
<div class="bg-primary text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h1 class="display-3 fw-bold">TechStore UPN</h1>
                <p class="lead">La mejor tecnología al mejor precio</p>
                <p>Laptops, smartphones, tablets y accesorios de las mejores marcas</p>
                <div class="mt-4">
                    <a asp-controller="Productos" asp-action="Index" class="btn btn-light btn-lg me-2">
                        <i class="bi bi-grid"></i> Ver Catálogo
                    </a>
                    <a asp-controller="Productos" asp-action="Ofertas" class="btn btn-outline-light btn-lg">
                        <i class="bi bi-tag"></i> Ver Ofertas
                    </a>
                </div>
            </div>
            <div class="col-md-6 text-center">
                <i class="bi bi-laptop" style="font-size: 15rem; opacity: 0.3;"></i>
            </div>
        </div>
    </div>
</div>

<!-- Features -->
<div class="container my-5">
    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <i class="bi bi-truck text-primary" style="font-size: 3rem;"></i>
                    <h5 class="mt-3">Envío Gratis</h5>
                    <p class="text-muted">En todos los productos, entregas en 24-48 horas</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <i class="bi bi-shield-check text-primary" style="font-size: 3rem;"></i>
                    <h5 class="mt-3">Garantía Extendida</h5>
                    <p class="text-muted">Todos los productos con garantía del fabricante</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <i class="bi bi-credit-card text-primary" style="font-size: 3rem;"></i>
                    <h5 class="mt-3">Pago Seguro</h5>
                    <p class="text-muted">Múltiples métodos de pago seguros y protegidos</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Productos Destacados -->
<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-star-fill text-warning"></i> Productos Destacados</h2>
        <a asp-controller="Productos" asp-action="Index" class="btn btn-outline-primary">
            Ver todos <i class="bi bi-arrow-right"></i>
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
            @foreach (var producto in Model.Take(8))
            {
                <div class="col">
                    <div class="card h-100 shadow-sm hover-card">
                        @if (!string.IsNullOrEmpty(producto.ImagenUrl))
                        {
                            <img src="@producto.ImagenUrl" class="card-img-top" alt="@producto.Nombre" style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                <i class="bi bi-image text-muted" style="font-size: 3rem;"></i>
                            </div>
                        }
                        
                        @if (producto.EsOferta)
                        {
                            <span class="position-absolute top-0 end-0 badge bg-danger m-2">
                                <i class="bi bi-tag-fill"></i> OFERTA
                            </span>
                        }

                        <div class="card-body d-flex flex-column">
                            <span class="badge bg-secondary mb-2 align-self-start">@producto.Categoria?.Nombre</span>
                            <h5 class="card-title">@producto.Nombre</h5>
                            <p class="card-text text-muted small flex-grow-1">
                                @(producto.Descripcion?.Length > 60 ? producto.Descripcion.Substring(0, 60) + "..." : producto.Descripcion)
                            </p>
                            
                            <div class="mt-auto">
                                @if (producto.PrecioAnterior.HasValue && producto.PrecioAnterior > producto.Precio)
                                {
                                    <p class="mb-1">
                                        <span class="text-decoration-line-through text-muted">S/ @producto.PrecioAnterior.Value.ToString("N2")</span>
                                    </p>
                                }
                                <p class="h4 text-primary mb-3">S/ @producto.Precio.ToString("N2")</p>
                                
                                <div class="d-grid gap-2">
                                    <a asp-controller="Productos" asp-action="Detalle" asp-route-id="@producto.ProductoId" class="btn btn-outline-primary btn-sm">
                                        <i class="bi bi-eye"></i> Ver Detalle
                                    </a>
                                    @if (User.Identity?.IsAuthenticated == true)
                                    {
                                        <form asp-controller="Carrito" asp-action="Agregar" method="post" class="d-inline">
                                            <input type="hidden" name="productoId" value="@producto.ProductoId" />
                                            <button type="submit" class="btn btn-primary btn-sm w-100">
                                                <i class="bi bi-cart-plus"></i> Agregar
                                            </button>
                                        </form>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-info-circle"></i> Próximamente tendremos productos disponibles
        </div>
    }
</div>

<style>
    .hover-card {
        transition: transform 0.2s;
        min-height: 500px;
    }
    .hover-card:hover {
        transform: translateY(-5px);
    }
    .card-body {
        display: flex;
        flex-direction: column;
    }
</style>
