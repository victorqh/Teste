@model IEnumerable<appTiendaUPN.Models.Producto>
@{
    ViewData["Title"] = "Resultados de Búsqueda";
    var searchTerm = ViewData["SearchTerm"]?.ToString() ?? "";
}

<div class="container my-4">
    <h2 class="mb-4">
        <i class="bi bi-search"></i> Resultados para: 
        <span class="text-primary">"@searchTerm"</span>
    </h2>

    @if (!Model.Any())
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle"></i> No se encontraron productos que coincidan con tu búsqueda.
            <br><br>
            <strong>Sugerencias:</strong>
            <ul>
                <li>Verifica la ortografía de las palabras clave</li>
                <li>Intenta usar palabras más generales</li>
                <li>Prueba con diferentes palabras clave</li>
            </ul>
            <a asp-action="Index" class="btn btn-primary mt-2">Ver todos los productos</a>
        </div>
    }
    else
    {
        <p class="text-muted mb-4">Se encontraron @Model.Count() producto(s)</p>
        
        <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
            @foreach (var producto in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm hover-card">
                        @if (!string.IsNullOrEmpty(producto.ImagenUrl))
                        {
                            <img src="@producto.ImagenUrl" class="card-img-top" alt="@producto.Nombre" style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                <i class="bi bi-image text-muted" style="font-size: 3rem;"></i>
                            </div>
                        }
                        
                        @if (producto.EsOferta)
                        {
                            <span class="position-absolute top-0 end-0 badge bg-danger m-2">
                                <i class="bi bi-tag-fill"></i> OFERTA
                            </span>
                        }

                        <div class="card-body d-flex flex-column">
                            <span class="badge bg-secondary mb-2 align-self-start">@producto.Categoria?.Nombre</span>
                            <h5 class="card-title">@producto.Nombre</h5>
                            <p class="card-text text-muted small flex-grow-1">
                                @(producto.Descripcion?.Length > 80 ? producto.Descripcion.Substring(0, 80) + "..." : producto.Descripcion)
                            </p>
                            
                            <div class="mt-auto">
                                <p class="h4 text-primary mb-3">S/ @producto.Precio.ToString("N2")</p>
                                
                                <div class="d-grid gap-2">
                                    <a asp-action="Detalle" asp-route-id="@producto.ProductoId" class="btn btn-outline-primary btn-sm">
                                        <i class="bi bi-eye"></i> Ver Detalle
                                    </a>
                                    @if (User.Identity?.IsAuthenticated == true)
                                    {
                                        <form asp-controller="Carrito" asp-action="Agregar" method="post" class="d-inline">
                                            <input type="hidden" name="productoId" value="@producto.ProductoId" />
                                            <button type="submit" class="btn btn-primary btn-sm w-100">
                                                <i class="bi bi-cart-plus"></i> Agregar al Carrito
                                            </button>
                                        </form>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .hover-card {
        transition: transform 0.2s;
    }
    .hover-card:hover {
        transform: translateY(-5px);
    }
</style>
