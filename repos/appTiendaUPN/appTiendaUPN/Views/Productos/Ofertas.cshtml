@model IEnumerable<appTiendaUPN.Models.Producto>
@{
    ViewData["Title"] = "Ofertas Especiales";
}

<div class="container my-4">
    <div class="text-center mb-4">
        <h1><i class="bi bi-tag-fill text-danger"></i> Ofertas Especiales</h1>
        <p class="text-muted">¡Aprovecha nuestras mejores ofertas en tecnología!</p>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center">
            <i class="bi bi-exclamation-triangle"></i> No hay ofertas disponibles en este momento.
            <br>
            <a asp-action="Index" class="btn btn-primary mt-3">Ver todos los productos</a>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
            @foreach (var producto in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-danger hover-card">
                        @if (!string.IsNullOrEmpty(producto.ImagenUrl))
                        {
                            <img src="@producto.ImagenUrl" class="card-img-top" alt="@producto.Nombre" style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                <i class="bi bi-image text-muted" style="font-size: 3rem;"></i>
                            </div>
                        }
                        
                        <span class="position-absolute top-0 end-0 badge bg-danger m-2">
                            @if (producto.PrecioAnterior.HasValue && producto.PrecioAnterior > producto.Precio)
                            {
                                var descuento = ((producto.PrecioAnterior.Value - producto.Precio) / producto.PrecioAnterior.Value * 100);
                                <span>-@descuento.ToString("N0")%</span>
                            }
                            else
                            {
                                <span>OFERTA</span>
                            }
                        </span>

                        <div class="card-body d-flex flex-column">
                            <span class="badge bg-secondary mb-2 align-self-start">@producto.Categoria?.Nombre</span>
                            <h5 class="card-title">@producto.Nombre</h5>
                            <p class="card-text text-muted small flex-grow-1">
                                @(producto.Descripcion?.Length > 80 ? producto.Descripcion.Substring(0, 80) + "..." : producto.Descripcion)
                            </p>
                            
                            <div class="mt-auto">
                                @if (producto.PrecioAnterior.HasValue && producto.PrecioAnterior > producto.Precio)
                                {
                                    <p class="mb-1">
                                        <span class="text-decoration-line-through text-muted">S/ @producto.PrecioAnterior.Value.ToString("N2")</span>
                                    </p>
                                }
                                <p class="h4 text-danger mb-3">S/ @producto.Precio.ToString("N2")</p>
                                
                                <div class="d-grid gap-2">
                                    <a asp-action="Detalle" asp-route-id="@producto.ProductoId" class="btn btn-outline-danger btn-sm">
                                        <i class="bi bi-eye"></i> Ver Detalle
                                    </a>
                                    @if (User.Identity?.IsAuthenticated == true)
                                    {
                                        <form asp-controller="Carrito" asp-action="Agregar" method="post" class="d-inline">
                                            <input type="hidden" name="productoId" value="@producto.ProductoId" />
                                            <button type="submit" class="btn btn-danger btn-sm w-100">
                                                <i class="bi bi-cart-plus"></i> Agregar al Carrito
                                            </button>
                                        </form>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .hover-card {
        transition: transform 0.2s;
        min-height: 500px;
    }
    .hover-card:hover {
        transform: translateY(-5px);
    }
    .card-body {
        display: flex;
        flex-direction: column;
    }
</style>
