@model IEnumerable<appTiendaUPN.Models.Producto>
@inject appTiendaUPN.Data.ApplicationDbContext DbContext
@{
    ViewData["Title"] = "Catálogo de Productos";
    var categorias = DbContext.Categorias.ToList();
    var categoriaSeleccionada = ViewData["CategoriaSeleccionada"] as int?;
}

<div class="container my-4">
    <h2 class="mb-4"><i class="bi bi-grid"></i> Catálogo de Productos</h2>

    <!-- Menú de Categorías -->
    <div class="mb-4">
        <div class="d-flex gap-2 flex-wrap align-items-center">
            <span class="fw-bold me-2">Categorías:</span>
            <a asp-action="Index" class="btn btn-sm @(categoriaSeleccionada == null ? "btn-primary" : "btn-outline-primary")">
                <i class="bi bi-grid-fill"></i> Todas
            </a>
            @foreach (var categoria in categorias)
            {
                <a asp-action="Index" asp-route-categoriaId="@categoria.CategoriaId" 
                   class="btn btn-sm @(categoriaSeleccionada == categoria.CategoriaId ? "btn-primary" : "btn-outline-primary")">
                    @categoria.Nombre
                </a>
            }
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No hay productos disponibles en este momento.
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
            @foreach (var producto in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm hover-card">
                        @if (!string.IsNullOrEmpty(producto.ImagenUrl))
                        {
                            <img src="@producto.ImagenUrl" class="card-img-top" alt="@producto.Nombre" style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                <i class="bi bi-image text-muted" style="font-size: 3rem;"></i>
                            </div>
                        }
                        
                        @if (producto.EsOferta)
                        {
                            <span class="position-absolute top-0 end-0 badge bg-danger m-2">
                                <i class="bi bi-tag-fill"></i> OFERTA
                            </span>
                        }

                        <div class="card-body d-flex flex-column">
                            <span class="badge bg-secondary mb-2 align-self-start">@producto.Categoria?.Nombre</span>
                            <h5 class="card-title">@producto.Nombre</h5>
                            <p class="card-text text-muted small flex-grow-1">
                                @(producto.Descripcion?.Length > 80 ? producto.Descripcion.Substring(0, 80) + "..." : producto.Descripcion)
                            </p>
                            
                            <div class="mt-auto">
                                @if (producto.PrecioAnterior.HasValue && producto.PrecioAnterior > producto.Precio)
                                {
                                    <p class="mb-1">
                                        <span class="text-decoration-line-through text-muted">S/ @producto.PrecioAnterior.Value.ToString("N2")</span>
                                    </p>
                                }
                                <p class="h4 text-primary mb-3">S/ @producto.Precio.ToString("N2")</p>
                                
                                <div class="d-grid gap-2">
                                    <a asp-action="Detalle" asp-route-id="@producto.ProductoId" class="btn btn-outline-primary btn-sm">
                                        <i class="bi bi-eye"></i> Ver Detalle
                                    </a>
                                    @if (User.Identity?.IsAuthenticated == true)
                                    {
                                        <form asp-controller="Carrito" asp-action="Agregar" method="post" class="d-inline">
                                            <input type="hidden" name="productoId" value="@producto.ProductoId" />
                                            <button type="submit" class="btn btn-primary btn-sm w-100">
                                                <i class="bi bi-cart-plus"></i> Agregar al Carrito
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <a asp-controller="Account" asp-action="Login" class="btn btn-secondary btn-sm">
                                            <i class="bi bi-box-arrow-in-right"></i> Inicia sesión para comprar
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .hover-card {
        transition: transform 0.2s;
        min-height: 500px;
    }
    .hover-card:hover {
        transform: translateY(-5px);
    }
    .card-body {
        display: flex;
        flex-direction: column;
    }
</style>
