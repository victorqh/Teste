@model appTiendaUPN.Models.Producto
@{
    ViewData["Title"] = Model.Nombre;
}

<div class="container my-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Inicio</a></li>
            <li class="breadcrumb-item"><a asp-controller="Productos" asp-action="Index">Productos</a></li>
            <li class="breadcrumb-item active">@Model.Nombre</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-6">
            @if (!string.IsNullOrEmpty(Model.ImagenUrl))
            {
                <img src="@Model.ImagenUrl" class="img-fluid rounded shadow" alt="@Model.Nombre">
            }
            else
            {
                <div class="bg-light d-flex align-items-center justify-content-center rounded" style="height: 400px;">
                    <i class="bi bi-image text-muted" style="font-size: 5rem;"></i>
                </div>
            }
        </div>

        <div class="col-md-6">
            @if (Model.EsOferta)
            {
                <span class="badge bg-danger mb-2"><i class="bi bi-tag-fill"></i> OFERTA ESPECIAL</span>
            }
            
            <h1 class="mb-3">@Model.Nombre</h1>
            <p class="text-muted">
                <span class="badge bg-secondary">@Model.Categoria?.Nombre</span>
            </p>

            <div class="mb-4">
                @if (Model.PrecioAnterior.HasValue && Model.PrecioAnterior > Model.Precio)
                {
                    <p class="mb-1">
                        <span class="text-decoration-line-through text-muted h5">S/ @Model.PrecioAnterior.Value.ToString("N2")</span>
                        <span class="badge bg-success ms-2">
                            @{
                                var descuento = ((Model.PrecioAnterior.Value - Model.Precio) / Model.PrecioAnterior.Value * 100);
                            }
                            -@descuento.ToString("N0")%
                        </span>
                    </p>
                }
                <p class="display-5 text-primary fw-bold mb-0">S/ @Model.Precio.ToString("N2")</p>
            </div>

            <div class="mb-4">
                <h5>Descripci칩n</h5>
                <p>@(Model.Descripcion ?? "Sin descripci칩n disponible.")</p>
            </div>

            <div class="mb-4">
                @if (Model.Stock > 0)
                {
                    <p class="text-success">
                        <i class="bi bi-check-circle-fill"></i> <strong>En Stock</strong> (@Model.Stock unidades disponibles)
                    </p>
                }
                else
                {
                    <p class="text-danger">
                        <i class="bi bi-x-circle-fill"></i> <strong>Agotado</strong>
                    </p>
                }
            </div>

            @if (Model.Stock > 0)
            {
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <form asp-controller="Carrito" asp-action="Agregar" method="post">
                        <input type="hidden" name="productoId" value="@Model.ProductoId" />
                        <div class="row g-2 mb-3">
                            <div class="col-4">
                                <input type="number" name="cantidad" value="1" min="1" max="@Model.Stock" class="form-control" />
                            </div>
                            <div class="col-8">
                                <button type="submit" class="btn btn-primary btn-lg w-100">
                                    <i class="bi bi-cart-plus"></i> Agregar al Carrito
                                </button>
                            </div>
                        </div>
                    </form>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login" class="btn btn-secondary btn-lg w-100 mb-3">
                        <i class="bi bi-box-arrow-in-right"></i> Inicia sesi칩n para comprar
                    </a>
                }
            }

            <a asp-controller="Productos" asp-action="Index" class="btn btn-outline-secondary w-100">
                <i class="bi bi-arrow-left"></i> Volver al cat치logo
            </a>
        </div>
    </div>

    <!-- -- ia: Recomendaciones de productos -->
    @{
        var recomendaciones = ViewData["Recomendaciones"] as IEnumerable<appTiendaUPN.Models.Producto>;
    }
    @if (recomendaciones != null && recomendaciones.Any())
    {
        <div class="mt-5">
            <h4><i class="bi bi-stars text-info"></i> Recomendaciones para ti</h4>
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
                @foreach (var rec in recomendaciones)
                {
                    <div class="col">
                        <div class="card h-100 shadow-sm hover-card">
                            @if (!string.IsNullOrEmpty(rec.ImagenUrl))
                            {
                                <img src="@rec.ImagenUrl" class="card-img-top" alt="@rec.Nombre" style="height: 120px; object-fit: cover;">
                            }
                            else
                            {
                                <div class="bg-light d-flex align-items-center justify-content-center" style="height: 120px;">
                                    <i class="bi bi-image text-muted" style="font-size: 2rem;"></i>
                                </div>
                            }
                            <div class="card-body">
                                <h6 class="card-title">@rec.Nombre</h6>
                                <p class="card-text text-muted small">S/ @rec.Precio.ToString("N2")</p>
                                <a asp-action="Detalle" asp-route-id="@rec.ProductoId" class="btn btn-outline-primary btn-sm w-100">
                                    <i class="bi bi-eye"></i> Ver Detalle
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    <!-- -- config para ia: Fin recomendaciones -->
</div>
